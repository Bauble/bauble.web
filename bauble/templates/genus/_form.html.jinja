<genus-form>
    <div id="genus-form" class="bauble-editor">

        <h3>{{ genus.str() if genus.str() != '' else 'New genus' }}</h3>

        {% if genus.id %}
            {% set action = url_for('.update', id=genus.id) %}
        {% else %}
            {% set action = url_for('.create') %}
        {% endif %}

        <!-- <tabset>

             <tab heading="General"> -->
        <form action="{{ action }}" method="POST" class="form-horizontal" role="form">

            <div class="row">
                <div class="col-md-5 col-sm-6">
                    <div class="form-group">
                        {{ form.family_id.label("Family", class_="col-sm-2 control-label") }}
                        <div class="col-sm-10">
                            <input class="form-control typeahead"
                                   value="{{genus.family.str() if genus.family else ''}}">
                            {#{ form.family(class_="form-control typeahead", name="") }#}
                            {{ form.family_id(type="hidden") }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form.genus.label(class_="col-sm-2 control-label")}}
                        <div class="col-sm-10">
                            {{ form.genus(class_="form-control")}}
                            <!-- <input id="genus-input" type="text" ng-model="data.genus.genus"
                                 placeholder="required" class="form-control" required/> -->
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form.author.label(class_="col-sm-2 control-label")}}
                        <div class="col-sm-10">
                            {{ form.author(class_="form-control")}}
                            <!-- <input type="text" ng-model="data.genus.author" class="form-control"
                                 id="author-input"/> -->
                        </div>
                    </div>
                </div>

                <!-- Synonyms Form -->
                <div class="col-md-5 col-md-offset-1">
                    <!-- <form model="data.synonyms" placeholder="Genus"
                         query="getSynonyms($viewValue)"></form> -->
                </div>

            </div>

            <div class="action-buttons">
                <button class="btn btn-default" :click="cancel">Cancel</button>
                <input type="submit" class="btn btn-primary" value="Save">
                <!-- <button type="submit" class="btn btn-primary" :click="save()">Save</button>
                     <button type="submit" class="btn btn-primary" :click="save(true)">Save and Add Taxon</button> -->
            </div>
            <!-- </tab> -->

            <!-- <tab heading="Notes">
                 <div ng-include src="'/static/partials/notes_editor.html'"></div>
                 </tab> -->

            <!-- </tabset> -->

        </form>
    </div>
</genus-form>
